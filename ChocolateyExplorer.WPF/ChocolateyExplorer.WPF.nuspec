    <metadata>
        <id>ChocolateyExplorer</id>
        <version>$version$</version>
        <title>Chocolatey Explorer</title>
        <authors>James Dibble</authors>
        <owners>James Dibble</owners>
        <licenseUrl>https://github.com/james-dibble/ChocolateyExplorer/blob/master/LICENSE.md</licenseUrl>
