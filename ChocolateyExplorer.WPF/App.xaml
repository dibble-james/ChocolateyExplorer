                    <Style TargetType="{x:Type Button}" x:Key="ToolbarButton">
                        <Setter Property="Padding" Value="9"/>
                        <Setter Property="Margin" Value="5"/>
                    </Style>
                    <Style TargetType="{x:Type Label}" x:Key="Title">
                        <Setter Property="FontWeight" Value="Bold"/>
